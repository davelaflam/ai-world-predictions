{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "moduleResolution": "node"
    }
  },
  "include": ["offline/**/*", "types/*.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
